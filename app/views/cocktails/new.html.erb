<h1 class="text-white text-center font-weight-bold m-4">Create a Cocktail</h1>
<div class="container w-50 vh-100 text-white">
  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Create!", class: "btn btn-outline-success btn-block" %>
  <% end %>
</div>
